pipeline {
    agent any

    environment {
        REGISTRY = "docker.io/miatrika05/ticklab"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        DEPLOY_USER = "miatrika"
        DEPLOY_HOST = "192.168.100.50"
        DEPLOY_PATH = "/var/www/ticklab"
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
        disableConcurrentBuilds()
    }

    stages {
        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Build') {
            steps {
                script {
                    load "${env.WORKSPACE}/jenkins/stages/build.groovy"
                }
            }
        }

        stage('Test & Quality') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        ansiColor('xterm') {
                            script { load "${env.WORKSPACE}/jenkins/stages/test.groovy" }
                        }
                    }
                }
                stage('Static Analysis') {
                    steps {
                        ansiColor('xterm') {
                            script { load "${env.WORKSPACE}/jenkins/stages/qa.groovy" }
                        }
                    }
                }
                stage('Security Scan') {
                    steps {
                        ansiColor('xterm') {
                            script { load "${env.WORKSPACE}/jenkins/stages/security.groovy" }
                        }
                    }
                }
            }
        }

        stage('Test Credentials') {
            steps {
                script {
                    echo "üß™ V√©rification des credentials"
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'U', passwordVariable: 'P')]) {
                        echo "‚úÖ Credentials trouv√©s pour utilisateur: ${U}"
                    }
                }
            }
        }

        stage('Package & Push') {
            steps {
                ansiColor('xterm') {
                    script {
                        echo "=== üöÄ √âtape Package & Push d√©marr√©e ==="

                        // Build de l'image avec le tag du build
                        sh """
                            echo "üõ†Ô∏è  Construction de l'image Docker : ${REGISTRY}:${IMAGE_TAG}"
                            docker build -t ${REGISTRY}:${IMAGE_TAG} .
                        """
                        echo "‚úÖ Build termin√©"

                        // Connexion et push sur Docker Hub
                        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                            sh '''
                                echo "üîë Connexion √† Docker Hub..."
                                echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                                echo "‚úÖ Connexion Docker Hub r√©ussie"

                                echo "üè∑Ô∏è  Tagging de l'image latest..."
                                docker tag ${REGISTRY}:${IMAGE_TAG} ${REGISTRY}:latest

                                echo "üì§ Push de l'image versionn√©e et latest..."
                                docker push ${REGISTRY}:${IMAGE_TAG}
                                docker push ${REGISTRY}:latest

                                echo "‚úÖ Push Docker termin√© avec succ√®s"
                                docker logout || true
                            '''
                        }


                        echo "=== ‚úÖ Fin du stage Package & Push ==="
                    }
                }
            }
        }


        stage('Build & Push Nginx') {
            steps {
                script {
                    def imageTag = "${env.IMAGE_TAG}"
                    sh """
                        docker build -t docker.io/miatrika05/ticklab-nginx:${imageTag} -f docker/nginx/Dockerfile .
                    """

                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push docker.io/miatrika05/ticklab-nginx:${imageTag}
                            docker logout
                        """
                    }
                }
            }
        }



        stage('Deploy') {
            steps {
                ansiColor('xterm') {
                    script { load 'jenkins/stages/deploy.groovy' }
                }
            }
        }
    }

    post {
        success { echo "‚úÖ Pipeline completed successfully." }
        failure { echo "‚ùå Pipeline failed ‚Äî check logs." }
        always {
            sh 'docker container prune -f || true'
            sh 'docker image prune -f || true'
        }
    }
}
